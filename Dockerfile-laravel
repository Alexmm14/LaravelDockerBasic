# Usa una imagen base de Ubuntu
FROM ubuntu:latest

# Configura el entorno para evitar la interactividad
ENV DEBIAN_FRONTEND=noninteractive

# Actualiza el sistema e instala las dependencias necesarias
RUN apt-get update \
    && apt-get install -y php \
    && apt-get install -y composer \
    && apt-get install -y vim \
    && apt-get install -y apache2 libapache2-mod-php \
    && apt-get install -y php-xml \
    && apt-get install -y git \
    && apt-get install -y systemctl \
    && apt-get install -y php-pgsql \
    && apt install -y php-curl \
    && a2enmod php8.1 \
    && apt-get clean \
    && service apache2 restart \
    && rm -rf /var/lib/apt/lists/*

# Clona el proyecto desde GitHub
WORKDIR /var/www/html/Laravel-docker
COPY mi-sitio.conf /etc/apache2/sites-available
COPY apache2.conf /etc/apache2

#Deshabilitar el archivo default de la configuraci칩n de apache2
RUN a2dissite 000-default.conf \
    #Das permisos al usuario de apache 2 a la configuraci칩n
    && chown -R www-data:www-data /etc/apache2/sites-available/mi-sitio.conf \
    # permite crear direcciones URL alternativas a las din치micas generadas por la programaci칩n de nuestro sitio web
    && a2enmod rewrite \
    #Aplica las configuraciones para mi-sitio
    && a2ensite mi-sitio.conf \
    && systemctl restart apache2  

# Expone el puerto 80 (o el puerto que necesites)
EXPOSE 80

# Cambiar al usuario www-data y luego ejecutar composer install
USER www-data
RUN cd /var/www/html/Laravel-docker/example-app \
    && composer install

# Cambiar nuevamente al usuario root para ejecutar los comandos finales
USER root
RUN chown -R www-data:www-data /var/www/html/Laravel-docker/example-app/storage \
    && chown -R www-data:www-data /var/www/html/Laravel-docker/example-app/bootstrap/cache \
    && cd /var/www/html/Laravel-docker/example-app/ \
    && php artisan key:generate

# Comando para iniciar apache y que se mantenga abierto el contenedor
CMD systemctl start apache2 && tail -f /dev/null

